<!DOCTYPE html>
<html>
<head>
<!-- Standard Meta -->
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

<!-- Site Properties -->
<title>static-catalog</title>

<link rel="stylesheet" type="text/css" href="semantic.css">
<link rel="stylesheet" type="text/css" href="semantic-button-github.css">

<script src="jquery-3.4.0.js"></script>
<script src="semantic.js"></script>
<script src="tablesort.js"></script>
<head>
<body>
	<div class="main ui container">
		<div class="ui fitted hidden divider"></div>
		<div class="ui inverted menu">
			<div class="header item">static-catalog</div>
			<a class="active item"> Test </a> <a class="item"> Research </a>
			<div class="right menu">

				<div class="item">
					<div class="ui action input">
						<input type="text" placeholder="Search...">
						<button class="ui icon button">
							<i class="search icon"></i>
						</button>
					</div>
				</div>

				<!-- 				<div class="item"> -->
				<!-- 					<div class="ui search"> -->
				<!-- 						<div class="ui icon input"> -->
				<!-- 							<input class="prompt" type="text" placeholder="Search..."> <i class="search icon"></i> -->
				<!-- 						</div> -->
				<!-- 					</div> -->
				<!-- 				</div> -->
				<!-- 				<div class="item"> -->
				<!-- 					<div class="ui inverted icon input"> -->
				<!-- 						<input type="text" placeholder="Search..."> <i class="search link icon"></i> -->
				<!-- 					</div> -->
				<!-- 				</div> -->
			</div>
		</div>

		<div class="ui black segment">
		
		<div class="ui grid">
			<div class="middle aligned fourteen wide column">
				Search-able catalog for static generated sites - static-catalog.org 2019
			</div>
			<div class="right aligned two wide column">
				<div class="ui primary button">Apply</div>
			</div>
		</div>	
		
			
		</div>

		<div class="ui grid">
			<div class="five wide column">
				
				{% for filter in template.filters %}
				
				<div class="ui vertical fluid accordion menu">
					<div class="item">
						<a class="header active title"> <i class="dropdown icon"></i> {{ filter.label }}
						</a>
						<div class="active content">
							<div class="ui list">
							
 								{% for filter_value in filter.main_values %}
							
								<div class="item">
									<div class="ui checkbox">
										<input id="example-id" type="checkbox" name="size" value="small"> <label for="example-id">{{ filter_value.name }}</label>
									</div>
									<div class="right floated content">
										<div class="ui basic horizontal label">{{ filter_value.count }}</div>
									</div>
								</div>
							
 								{% endfor %}

								{% if filter.has_more_values %}
			
								<div class="item">
									<a class="header title"> <i class="dropdown icon"></i>Show more <span class="ui basic horizontal label">{{ filter.more_values_count }}</span></a> 
									
									<div class="content">
										<div class="ui list">
										
			 								{% for filter_value in filter.more_values %}
										
											<div class="item">
												<div class="ui checkbox">
													<input id="example-id" type="checkbox" name="size" value="small"> <label for="example-id">{{ filter_value.name }}</label>
												</div>
												<div class="right floated content">
													<div class="ui basic horizontal label">{{ filter_value.count }}</div>
												</div>
											</div>
										
			 								{% endfor %}
											
										</div>
									</div>
								</div>

								{% endif %}
								
							</div>
						</div>
					</div>
				</div>
				
				{% endfor %}
				
			</div>
			<div class="eleven wide stretched column">
				<table class="ui table stackable compact sortable celled table">
					<thead>
						<tr>
							<th class="three wide">Column 1</th>
							<th class="two wide sorted descending">Column 2</th>
							<th>Column 3</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>John</td>
							<td>No Action</td>
							<td>None</td>
						</tr>
						<tr>
							<td>Jill</td>
							<td>Denied</td>
							<td>None</td>
						</tr>
						<tr>
							<td>Jamie</td>
							<td>Approved</td>
							<td>Requires call</td>
						</tr>
					</tbody>
				</table>

			</div>
		</div>

	</div>
	<script type="text/javascript">
		$(() => {
			$('ui.table').tablesort();
			$('.ui.accordion').accordion();
		});
	</script>
</body>
</html>