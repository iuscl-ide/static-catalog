<!DOCTYPE html>
<html>
<head>
<!-- Standard Meta -->
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

<!-- Site Properties -->
<title>static-catalog</title>

<link rel="stylesheet" type="text/css" href="semantic.css">
<link rel="stylesheet" type="text/css" href="semantic-button-github.css">

<script src="jquery-3.4.0.js"></script>
<script src="semantic.js"></script>
<script src="tablesort.js"></script>

<script src="static-catalog.js"></script>
<script src="papaparse.js"></script>

<script src="static-catalog-dev.js"></script>

</head>
<body>
	<div class="main ui container">
		<div class="ui fitted hidden divider"></div>
		<div class="ui inverted menu">
			<div class="header item">static-catalog</div>
			<a class="active item"> Test </a> <a class="item"> Research </a>
			<div class="right menu">

				<div class="item">
					<div class="ui action input">
						<input type="text" placeholder="Search...">
						<button class="ui icon button">
							<i class="search icon"></i>
						</button>
					</div>
				</div>

				<!-- 				<div class="item"> -->
				<!-- 					<div class="ui search"> -->
				<!-- 						<div class="ui icon input"> -->
				<!-- 							<input class="prompt" type="text" placeholder="Search..."> <i class="search icon"></i> -->
				<!-- 						</div> -->
				<!-- 					</div> -->
				<!-- 				</div> -->
				<!-- 				<div class="item"> -->
				<!-- 					<div class="ui inverted icon input"> -->
				<!-- 						<input type="text" placeholder="Search..."> <i class="search link icon"></i> -->
				<!-- 					</div> -->
				<!-- 				</div> -->
			</div>
		</div>

		<div class="ui black segment">
			<div class="ui grid">
				<div class="middle aligned fourteen wide column">Search-able catalog for static generated sites -
					static-catalog.org 2019</div>
				<div class="right aligned two wide column">
					<div id="buttonApply" class="ui fluid primary button">Apply</div>
				</div>
			</div>
		</div>
		<div class="ui grid">
			<div class="five wide column">
				{% for field in page.fields %} {% if field.filter %}
				<div class="ui vertical fluid accordion menu">
					<div class="item">
						<a class="header active title"> <i class="dropdown icon"></i> {{ field.label }} <span
							class="ui left pointing basic horizontal label">{{ field.total_values_count }}</span>
						</a>
						<div class="active content">
							<div class="ui list">
								{% for field_value in field.exception_values %}
								<div class="item">
									<div class="ui checkbox">
										<input id="{{ field_value.identifier }}" type="checkbox" name="{{ field_value.identifier }}" value="{{ field_value.name }}">
										<label for="{{ field_value.identifier }}" style="font-style: italic;">{{ field_value.label }}</label>
									</div>
									<div class="right floated content">
										<div class="ui basic horizontal label">{{ field_value.count }}</div>
									</div>
								</div>
								{% endfor %} {% for field_value in field.values %}
								<div class="item">
									<div class="ui checkbox">
										<input id="{{ field_value.identifier }}" type="checkbox" name="{{ field_value.identifier }}" value="{{ field_value.name }}">
										<label for="{{ field_value.identifier }}">{{ field_value.label }}</label>
									</div>
									<div class="right floated content">
										<div class="ui basic horizontal label">{{ field_value.count }}</div>
									</div>
								</div>
								{% endfor %} {% if field.has_more_values or field.has_more_exception_values %}
								<div class="item">
									<a class="title"> <i class="dropdown icon"></i> Show more <span
										class="ui left pointing basic horizontal label">{{ field.total_more_values_count }}</span></a>
									<div class="content">
										<div class="ui list">
											{% for field_value in field.more_exception_values %}
											<div class="item">
												<div class="ui checkbox">
													<input id="{{ field_value.identifier }}" type="checkbox" name="{{ field_value.identifier }}" value="{{ field_value.name }}">
													<label for="{{ field_value.identifier }}" style="font-style: italic;">{{ field_value.label }}</label>
												</div>
												<div class="right floated content">
													<div class="ui basic horizontal label">{{ field_value.count }}</div>
												</div>
											</div>
											{% endfor %} {% for field_value in field.more_values %}
											<div class="item">
												<div class="ui checkbox">
													<input id="{{ field_value.identifier }}" type="checkbox" name="{{ field_value.identifier }}" value="{{ field_value.name }}">
													<label for="{{ field_value.identifier }}">{{ field_value.label }}</label>
												</div>
												<div class="right floated content">
													<div class="ui basic horizontal label">{{ field_value.count }}</div>
												</div>
											</div>
											{% endfor %}
										</div>
									</div>
								</div>
								{% endif %}
							</div>
						</div>
					</div>
				</div>
				{% endif %} {% endfor %}
			</div>
			<div class="eleven wide column">
				<div id="scp_id__no_results_panel" class="ui placeholder segment">
					<div class="ui icon header">
						<i class="ban icon"></i>No results
					</div>
				</div>
				<div id="scp_id__results_panel">
					<div class="ui right floated main menu">
						<a class="th popup icon active item" id="scp_id__see_as_tiles" data-content="See as tiles"><i class="th icon"></i></a>
						<a class="list popup icon item" id="scp_id__see_as_list" data-content="See as list"><i class="list icon"></i></a>
					</div>
					<div class="ui hidden clearing divider"></div>
					<div id="scp_id__tiles_or_list" class="ui three column grid">
						<!-- 						<div class="column"> -->
						<!-- 							<div class="ui bottom attached grey segment"> -->
						<!-- 								<div name="scp_name__tile_grid" class="ui one column grid"> -->
						<!-- 									<div class="column"> -->
						<!-- 										<div class="ui small header">Field</div> -->
						<!-- 										Value -->
						<!-- 									</div> -->
						<!-- 								</div> -->
						<!-- 							</div> -->
						<!-- 						</div> -->
					</div>
					<div class="ui divider"></div>
					<div class="ui right floated pagination menu">
						<a class="active item"> 1 </a>
						<div class="disabled item">...</div>
						<a class="item"> 10 </a> <a class="item"> 11 </a> <a class="item"> 12 </a>
					</div>
					<div class="ui hidden clearing divider"></div>
				</div>
			</div>
		</div>
	</div>
	<div style="display: none">
		<div id="scp_id__tile_template" class="column">
			<div class="ui bottom attached grey segment">
				<div name="scp_name__tile_grid" class="ui one column grid" style="padding-top: 1rem"></div>
			</div>
		</div>
		<div id="scp_id__tile_field_template" class="column" style="padding-top: 0rem">
			<span name="scp_name__tile_field_name" class="ui small header"></span> &nbsp; <span name="scp_name__tile_field_value"></span>
		</div>
	</div>
	<script type="text/javascript">
		$(() => {
			StaticCatalogDev.init();			
		});
	</script>
</body>
</html>